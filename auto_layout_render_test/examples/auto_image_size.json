{
  "canvas": {
    "width": 400,
    "height": 300,
    "background": "#f0f0f0"
  },
  "elements": [
    {
      "type": "image",
      "id": "auto_size_image",
      "source": "assets/sample.png",
      "properties": {
        "opacity": 1.0
      },
      "constraints": [
        {
          "type": "centerX",
          "constant": 0
        },
        {
          "type": "centerY",
          "constant": 0
        }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "content": "Auto Image Size Test",
      "properties": {
        "font_size": 24,
        "color": "#333333"
      },
      "constraints": [
        {
          "type": "centerX",
          "constant": 0
        },
        {
          "type": "top",
          "target": "auto_size_image",
          "constant": -40
        }
      ]
    }
  ]
}